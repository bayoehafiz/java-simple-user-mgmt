# Production Environment Configuration
SPRING_PROFILE=prod
APP_PORT=8080
USER_DATA_FILE=/app/data/users.json
LOG_LEVEL=WARN
APP_LOG_LEVEL=ERROR

# Application Configuration
APP_NAME=User API
APP_VERSION=1.0.0
APP_DESCRIPTION=Spring Boot REST API for User Management

# JWT Configuration (MUST be set with secure values in production)
JWT_SECRET=${YOUR_SECURE_JWT_SECRET_KEY_HERE}
JWT_EXPIRATION=86400

# Security Configuration
SSL_ENABLED=true
REQUIRE_SSL=true

# JVM Options (production optimized)
JAVA_OPTS=-Xmx1024m -Xms512m -XX:+UseG1GC -XX:+OptimizeStringConcat
